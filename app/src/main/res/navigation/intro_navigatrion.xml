<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_page_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.muharlyam.marketplace.ui.intro.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_splashFragment_to_mainActivity2"
            app:destination="@id/mainActivity2" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.muharlyam.marketplace.ui.intro.SignUpFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_sign_up" />

    <activity
        android:id="@+id/mainActivity2"
        android:name="com.muharlyam.marketplace.ui.main.MainActivity"
        android:label="activity_main" />
</navigation>